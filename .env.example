# Barber Manager - Environment Configuration
# Copy this file to .env and customize values

# Database
DATABASE_URL=sqlite:///barber_manager.db

# Debug mode (true/false)
DEBUG=false

# SQL Echo (true/false) - prints all SQL statements
ECHO_SQL=false

# Window size
WINDOW_WIDTH=1200
WINDOW_HEIGHT=800

# Logging (optional - log file path)
# LOG_FILE=barber_manager.log
